---
import CardList from "./CardList.astro";

export interface Props {
  title: string;
  description: string;
  color?: string;
  links?: [title: string, description: string, url: string];
}

const { title, description, links, color } = Astro.props;

console.log("Section Links", links);
---

<article class="link-section">
  <h2>{title}</h2>
  <p>{description}</p>
  {links && links.length > 0 &&
    <CardList links={links} />
  }
</article>

<style>
  .link-section {
    --accent: ${color};
    display: flex;
    flex-direction: column;
    padding: 1rem 0.15rem;
    background-color: rgb(var(--bgColor));
    border-bottom: 1px solid rgb(var(--borderColor));
    transition: 0.5s ease-in-out all;
  }
  h2 {
    color: rgb(var(--accent));
    margin: 0;
    font-size: 1rem;
    transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
    text-transform: uppercase;
  }
  p {
    font-size: 0.8rem;
    margin-top: 0.5rem;
    margin-bottom: 0;
    color: rgb(var(--textColor));
  }
  .link-card:is(:hover, :focus-within) {
    background-color: rgba(var(--accent), 0.4);
  }
  .link-card:is(:hover, :focus-within) h2 {
    color: rgb(var(--accent));
  }
</style>
