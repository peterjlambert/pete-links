---
export interface Props {
  title: string;
  description: string;
  href: string;
  type: string;
}

const { href, title, description, type } = Astro.props;
---

<li class="link-card">
  <a href={href}>
    <h2>
      {title}
      <span>&rarr;</span>
    </h2>
    <p>
      {description}
    </p>
    <slot />
  </a>
</li>
<style>
  .link-card {
    display: flex;
    padding: 0.15rem;
    background-color: rgb(var(--bgColor));
    border-bottom: 1px solid rgb(var(--borderColor));
    transition: 0.5s ease-in-out all;
  }
  .link-card > a {
    width: 100%;
    text-decoration: none;
    line-height: 1.4;
    padding: 1rem 1.3rem;
    color: rgb(var(--textColor));
    background-color: rgb(var(--bgColor));
    opacity: 0.8;
  }
  h2 {
    margin: 0;
    font-size: 0.8rem;
    transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
    text-transform: uppercase;
  }
  p {
    font-size: 0.8rem;
    margin-top: 0.5rem;
    margin-bottom: 0;
    color: rgb(var(--textColor));
  }
  .link-card:is(:hover, :focus-within) {
    background-color: rgba(var(--accent), 0.4);
  }
  .link-card:is(:hover, :focus-within) h2 {
    color: rgb(var(--accent));
  }
</style>
