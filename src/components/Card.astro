---
export interface Props {
  title: string;
  url: string;
  description?: string;
  type?: string;
}

const { url, title, description, type } = Astro.props;
---

<li class="link-card">
  <a href={url}>
    <h3>
      {title}
      <span>&rarr;</span>
    </h3>
    {description && <p>{description}</p>}
  </a>
</li>

<style>
  .link-card {
    display: flex;
    padding: 0.15rem;

    transition: 0.5s ease-in-out all;
  }
  .link-card > a {
    width: 100%;
    text-decoration: none;
    line-height: 1.4;
    padding: 1rem 1.3rem;
    color: rgb(var(--textColor));
  }
  h3 {
    font-size: 0.8rem;
    margin: 0;
    text-transform: uppercase;
    transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
  }
  p {
    color: rgb(var(--textColor));
    font-size: 0.8rem;
    margin-bottom: 0;
    margin-top: 0.5rem;
  }
  a {
    border-bottom: 1px solid rgb(var(--accentColor), 0.4);
    transition: all 0.6s cubic-bezier(0.22, 1, 0.36, 1);
  }
  a:is(:hover, :focus-within) {
    background-color: rgba(var(--accentColor), 0.1);
    border-bottom-color: transparent;
  }
  a:is(:hover, :focus-within) h2 {
    color: rgb(var(--accentColor));
  }
</style>
