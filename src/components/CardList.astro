---
import Card from "./Card.astro";

export interface Props {
  links: Array<LinkProps>;
}

export interface LinkProps {
  label: string;
  description: string;
  url: string;
}
const { links } = Astro.props;
---

<ol>
  {
    links &&
      links.map((link) => {
        return (
          <Card
            title={link.label}
            description={link.description}
            url={link.url}
          />
        );
      })
  }
</ol>

<style>
  :is(ol) {
    padding: 0;
    display: flex;
    flex-direction: column;
    margin: 0;
  }
</style>
